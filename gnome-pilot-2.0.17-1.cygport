inherit gnome2

DESCRIPTION="GNOME Pilot-link interface"


PATCH_URI="
	2.0.17-applet-optional.patch
	2.0.17-conduit-shlibname.patch
	2.0.17-no-undefined.patch
"

PKG_NAMES="${PN} ${PN}-devel"
PKG_HINTS="setup devel"
gnome_pilot_CONTENTS="--exclude=idl usr/bin/ usr/lib/bonobo/ usr/lib/${PN}/ usr/share/"
gnome_pilot_devel_CONTENTS="usr/include/ usr/lib/lib* usr/lib/pkgconfig/ usr/share/idl/"

# make gpilotd easy to start from command line
CYGCONF_ARGS="--libexecdir=/usr/bin"
